<section id="adminLogo" class="container-fluid text-center">
  <h3 class="toGreen">LOGOS</h3>
  <div class="row">
    <form id="postLogo" action="/admin/showroom-logo" method="POST" class="col-6">
      <div  style="margin-top: 80px;">
          <p>{{description}}</p>
          <input type="text" name="url" placeholder="image url" value=""><br><br>
          <input type="text" name="nom" placeholder="nom" value=""><br><br>
          <input type="submit" value="Envoyer" class="btn btn-success">
      </div>
    </form>

    <div id="contentLogo" class="col-6 container text-center">
      <div class="row">
        {{#each logos}}
        <div>
          <img class="img-fluid bubble2" src="../img/{{this.url}}" title="{{this.nom}}"/><br>
          <a href="/admin/delete-logo/{{this._id}}">Supprimer</a>
        </div>
        {{/each}}
    </div>
    </div>
  </div>
</section>

<hr>

<section id="adminAudreact" class="container-fluid text-center">
  <h3 class="toGreen">Clips AUDIO REACT</h3>
  <div class="row">
    <form id="postAudreact" action="/admin/showroom-audreact" method="POST" class="col-6">
      <div  style="margin-top: 80px;">
          <p>{{description}}</p>
          <input type="text" name="image" placeholder="image url" value=""><br><br>
          <input type="text" name="video" placeholder="video url *" value="">
          <p class="">* Merci de copier <bold>uniquement</bold> l'ID de la video </p>
          <p class="">Exemple : https://vimeo.com/273082427 -> entrez simplement "273082427" dans le champs</p>
          <br><br>
          <input type="submit" class="btn btn-success" value="Envoyer">
      </div>
    </form>

    <div id="contentAudreact" class="col-6 container">
      <div class="row">
        {{#each audreacts}}
        <div class="content text-center">
          <img src="../img/{{this.image}}" class="img-fluid" /><br>
          <iframe src="http://player.vimeo.com/video/{{this.video}}" frameborder="0">
          </iframe><br>
          <a href="/admin/delete-audreact/{{this._id}}">Supprimer</a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>

