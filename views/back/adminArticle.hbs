<section>
    <form action="/admin/article" method="POST">
        <div class="row text-center">
            <div class="col-12 col-md-6">
                <input type="text" name="url" placeholder="image url" value=""><br><br>
                <input type="text" name="titre" placeholder="titre" value=""><br><br>
                <input type="text" name="date" placeholder="date" value=""><br><br>
                <textarea name="description" id="editeur" class="ckeditor" cols="80" rows="10"></textarea><br>
                {{!-- <textarea type="text" name="description" placeholder="description" value=""></textarea><br><br> --}}
                <input type="text" name="url1" placeholder="image url1" value=""><br><br>
                <input type="text" name="url2" placeholder="image url2" value=""><br><br>
                <input type="text" name="url3" placeholder="image url3" value=""><br><br>
                <input type="text" name="url4" placeholder="image url4" value=""><br><br>
                <input type="text" name="url5" placeholder="image url5" value=""><br><br>
                <input type="text" name="url6" placeholder="image url6" value=""><br><br>
                <input type="text" name="url7" placeholder="image url7" value=""><br><br>
                <input type="text" name="url8" placeholder="image url8" value=""><br><br>
                <input type="text" name="url9" placeholder="image url9" value=""><br><br>
                <input type="text" name="url10" placeholder="image url10" value=""><br><br>
                <input class="btn btn-success" type="submit" value="Envoyer">
                <p>{{description}}</p>
            </div>
            {{!-- Tous les articles --}}
            <div class="row col-12 col-md-6">
                {{#each articles}}
                <div class="col-6">
                  <h4>{{this.titre}}</h4>
                  <p>{{this.date}}</p>
                  <a href="edit-article/{{this._id}}">Modifier</a>
                  <a href="delete-article/{{this._id}}">Supprimer</a><hr>
                </div>
                {{/each}}
            </div>
        </div>
    </form>
</section>
